<h1><%= current_user.first_name %></h1>
<% if !current_user %>
	<%= render 'devise/shared/links' %>
<% end %>
<div class="pretty-box">
	<%= form_for Oneline.new do |f|%>
		Todays one line 
		<p><%= f.text_field :contents %><p>
		<% t = Time.now %>
		<% f.hidden_field :user, value: current_user %>
		<p><%= t.strftime('%B %d, %Y') %></p>
		<p><%= f.submit 'Submit' %><p>
	<% end %>
</div>

<div class="yesterday-box">
	<% Oneline.todays_quote(Date.today).each do |toq| %>
	 Most recently people said: <%= toq.contents %>
	<% end %>
</div>

<div class="secret_admirer">
	<p>This is a oneline message you've received from your secret_admirer</p>

</div>
<div class="admirer">
	<p>This is a oneline message you can send to your admirer</p>
	<% current_user.admirer.each do |admirer| %>
		<%=link_to admirer.first_name, new_oneline_path, remote: true, data_admirer_id: admirer.id %>
	<% end %>
</div>

<% Oneline.my_oneline(current_user).reverse.each do |oneline| %>
	<p>Created at <%= oneline.created_at.strftime('%B %d, %Y') %></p>
	<p><%= oneline.contains_question? %></p>
	<p><%= oneline.contents %> <%= link_to "Edit", oneline_path(oneline.id), remote: true, class: "edit#{oneline.id}" %>
		<%= link_to 'Delete', oneline_path(oneline.id), method: :delete, remote: true, class: "delete_#{oneline.id }" %> 
	</p>
	<br>
<% end %>
